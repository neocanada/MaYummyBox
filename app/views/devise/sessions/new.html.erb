<div class="container">
  <div class="row">
    <div class="container-registration-top-section">
      <div class="registration-top-section text-center">
        <div class="registration-title text-center">
          <h2>Déjà membre, me connecter à mon compte</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="container-registration-form">
        <div class="form-registration-box">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs form-sign">
              <div class="col-md-12 col-xs-12">
                <%= f.input :email, required: false, label: 'Email', placeholder: 'utilisateur@domain.com', autofocus: true %>
              </div>
              <div class="col-md-12 col-xs-12">
                <%= f.input :password, required: false %>
                <div class="login-forgot-password">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %><br />
                  <% end -%>
                </div>
              </div>
              <div class="col-md-12 col-xs-12">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>

            <div class="form-actions">
              <div class="col-md-12 text-center">
                <%= f.button :submit, "Valider", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container-registration-bottom-section">
      <div class="registration-bottom-section">
        <div class="registration-separation text-center">
          <p class="text-center"><span>OU</span></p>
        </div>

        <div class="registration-login-button text-center">
         <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
           <%= link_to "Créer un compte", new_registration_path(resource_name), class: "btn btn-primary" %><br />
         <% end -%>
        </div>
      </div>
    </div>

  </div>
</div>
